<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hintman" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_82</item>
        <item name="colorPrimaryVariant">@color/green_82</item>
        <item name="colorOnPrimary">@color/green_3A</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_A8</item>
        <item name="colorSecondaryVariant">@color/green_A8</item>
        <item name="colorOnSecondary">@color/green_3A</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Hintman.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Hintman.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Hintman.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>